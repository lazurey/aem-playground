<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Properties"
    width="{Long}500"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <child
            jcr:primaryType="cq:Widget"
            fieldLabel="Button text"
            name="./child"
            xtype="textfield"/>
        <raised
            jcr:primaryType="cq:Widget"
            fieldLabel="Raised Button"
            name="./raised"
            type="select"
            xtype="selection"
            defaultValue="{Boolean}false">
            <options jcr:primaryType="cq:WidgetCollection">
                <true
                    jcr:primaryType="nt:unstructured"
                    text="Raised"
                    value="{Boolean}true"/>
                <false
                    jcr:primaryType="nt:unstructured"
                    text="Off"
                    value="{Boolean}false"/>
            </options>
        </raised>
        <colored
            jcr:primaryType="cq:Widget"
            fieldLabel="colored Button"
            name="./colored"
            type="select"
            xtype="selection"
            defaultValue="{Boolean}false">
            <options jcr:primaryType="cq:WidgetCollection">
                <true
                    jcr:primaryType="nt:unstructured"
                    text="Colored"
                    value="{Boolean}true"/>
                <false
                    jcr:primaryType="nt:unstructured"
                    text="Off"
                    value="{Boolean}false"/>
            </options>
        </colored>
    </items>
</jcr:root>
